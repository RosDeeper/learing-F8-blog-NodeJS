<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4" style="margin-bottom: 14px">
            <div class="card">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <a href="#" class="btn btn-primary">Buy course</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>